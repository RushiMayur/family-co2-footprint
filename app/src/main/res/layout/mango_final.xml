<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/woodback">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/imgFinalIcon"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:src="@mipmap/ic_iconforappnew_round"/>
    <TextView
        android:id="@+id/txtFCF"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="FCF"
        android:textColor="#5B0000"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:textSize="15sp"
        android:layout_below="@id/imgFinalIcon"/>

    <TextView
        android:id="@+id/txtAboveCO2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/total_co2"
        android:layout_marginTop="27dp"
        android:layout_marginHorizontal="18dp"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:textStyle="bold"
        android:layout_below="@id/txtFCF"
        android:fontFamily="@font/aclonica"
        android:textColor="#5B0000"
        android:textSize="28sp"/>

    <TextView
        android:id="@+id/txtCO2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtAboveCO2"
        android:layout_marginHorizontal="18dp"
        android:layout_marginTop="6dp"
        android:gravity="center"
        android:text="Get"
        android:fontFamily="@font/aclonica"
        android:textColor="#FFD921 "
        android:textSize="35sp"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/txtLine"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginHorizontal="8dp"
        android:layout_marginTop="35dp"
        android:layout_below="@id/txtCO2"
        android:background="#7B3F00"/>

    <TextView
        android:id="@+id/txtMangoTreeDef"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtLine"
        android:layout_marginHorizontal="18dp"
        android:layout_marginTop="35dp"
        android:gravity="center"
        android:textStyle="bold"
        android:fontFamily="@font/aclonica"
        android:text="@string/total_mango_trees"
        android:textColor="#200000"
        android:textSize="28sp" />

    <TextView
        android:id="@+id/txtMangoTrees"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtMangoTreeDef"
        android:layout_marginHorizontal="18dp"
        android:layout_marginTop="6dp"
        android:fontFamily="@font/aclonica"
        android:gravity="center"
        android:text="Get"

        android:textColor="#FFB921 "
        android:textSize="37sp"
        android:textStyle="bold" />


    </RelativeLayout>

</androidx.core.widget.NestedScrollView>